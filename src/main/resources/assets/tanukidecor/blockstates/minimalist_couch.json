{
  "multipart": [
    {
      "when": { "AND": [ { "width": 1 }, { "facing": "north" } ] },
      "apply": { "model": "tanukidecor:block/minimalist_couch/east" }
    },
    {
      "when": { "AND": [ { "width": 2 }, { "facing": "north" } ] },
      "apply": { "model": "tanukidecor:block/minimalist_couch/west" }
    },
    
    {
      "when": { "AND": [ { "width": 1 }, { "facing": "south" } ] },
      "apply": { "model": "tanukidecor:block/minimalist_couch/east", "y": 180 }
    },
    {
      "when": { "AND": [ { "width": 2 }, { "facing": "south" } ] },
      "apply": { "model": "tanukidecor:block/minimalist_couch/west", "y": 180 }
    },

    {
      "when": { "AND": [ { "width": 1 }, { "facing": "east" } ] },
      "apply": { "model": "tanukidecor:block/minimalist_couch/east", "y": 90 }
    },
    {
      "when": { "AND": [ { "width": 2 }, { "facing": "east" } ] },
      "apply": { "model": "tanukidecor:block/minimalist_couch/west", "y": 90 }
    },
    
    {
      "when": { "AND": [ { "width": 1 }, { "facing": "west" } ] },
      "apply": { "model": "tanukidecor:block/minimalist_couch/east", "y": 270 }
    },
    {
      "when": { "AND": [ { "width": 2 }, { "facing": "west" } ] },
      "apply": { "model": "tanukidecor:block/minimalist_couch/west", "y": 270 }
    }
  ]
}